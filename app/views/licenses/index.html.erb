
<h1 class="mt-6 title is-1 is-flex is-justify-content-center">Licenses</h1>

<div class="is-flex is-justify-content-center">
  <%= link_to 'Add license', new_license_path, class: "button is-success is-large"%>
</div>

<table class="table ml-6 mr-6 is-striped ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Notify</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @licenses.each do |license| %>
      <tr>
        <td><%= license.name %></td>
        <td><%= license.notify %></td>
        <td>
          <p  style="white-space: nowrap">
            <%= license.expiration.strftime('%e.%m.%y - %H:%M') %>
          </p>
          <p  style="white-space: nowrap">
            <%= distance_of_time_in_words(Time.now, license.expiration) %>
          </p>
        </td>
        <td><%= link_to license_path(license), :title => "View this license" do %>
            <%= fa_icon('eye', type: :solid, style: 'color: Purple') %>
          <% end  %>
        </td>

        <td><%= link_to edit_license_path(license), :title => "Edit this license" do %>
            <%= fa_icon('edit', style: 'color: Purple') %>
          <% end %>
        </td>

        <td><%= link_to license_path(license), method: :delete, data: { confirm: 'Are you sure?' },
                        :title => "Delete this license" do %>
            <%= fa_icon('trash-alt', style: 'color: Purple') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
