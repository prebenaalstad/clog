<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Time taken</th>
      <th>User</th>
      <th>Description</th>
      <th>Status</th>
      <th>Case</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.time_taken %></td>
        <td><%= entry.user %></td>
        <td><%= entry.description %></td>
        <td><%= entry.status %></td>
        <td><%= entry.case %></td>
        <td><%= entry.team %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
